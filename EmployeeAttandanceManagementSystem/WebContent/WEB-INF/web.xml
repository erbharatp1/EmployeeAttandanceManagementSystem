<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" id="WebApp_ID" version="3.0">
  <display-name>TestingProjectApplication</display-name>
   <welcome-file-list>
    <welcome-file>Home.html</welcome-file>
    </welcome-file-list>
    <servlet>
    	<servlet-name>login</servlet-name>
    	<servlet-class>com.eams.controller.LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>login</servlet-name>
    	<url-pattern>/login</url-pattern>
    </servlet-mapping>
  
    <servlet>
    	<servlet-name>register</servlet-name>
    	<servlet-class>com.eams.controller.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>register</servlet-name>
    	<url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
    	<servlet-name>test</servlet-name>
    	<servlet-class>com.eams.controller.LoginForgetController</servlet-class>
    </servlet>
    <servlet-mapping>
    	<servlet-name>test</servlet-name>
    	<url-pattern>/forget</url-pattern>
    </servlet-mapping>
    
</web-app>